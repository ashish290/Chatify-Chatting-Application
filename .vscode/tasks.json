{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start tsc-watch",
      "type": "shell",
      "command": "npx tsc-watch --onSuccess \"node dist/index.js\"",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}/backend"
      }
    }
  ],
  "typescript.tsdk": "node_modules/typescript/lib",
  "debug.javascript.terminalOptions": {
    "strict": true
  }
}
